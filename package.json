    "test": "jest"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "types": "./lib/simple-mask-money.d.ts",
      "node": "./lib/simple-mask-money.cjs.js",
      "import": "./lib/simple-mask-money.esm.js",
      "default": "./lib/simple-mask-money.umd.js"
    }
  },
