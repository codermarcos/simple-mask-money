  "main": "./lib/simple-mask-money.cjs.js",
  "module": "./lib/simple-mask-money.esm.js",
  "browser": "./lib/simple-mask-money.umd.js",
  "scripts": {
    "postinstall": "node -e \"console.log('\\x1b[36m','Look at the documentation:','\\x1b[0m','\\x1b[33m','https://github.com/codermarcos/simple-mask-money','\\x1b[0m','\\x1b[36m','\\nThanks for your download! ❤️','\\x1b[0m')\"",
    "build": "rollup --config rollup.config.js --bundleConfigAsCjs",
